<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/background_original_cut"
        >

        <include layout="@layout/app_toolbar"></include>


        <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:id="@+id/viewFlipper">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorPrimaryDarkAlpha"
                    android:weightSum="4"
                    >


                    <Button
                        android:id="@+id/battlePassButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:drawableRight="@drawable/battlestar_white_50dp"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:text="Battle Pass"
                        android:maxLines="1">
                    </Button>

                    <Button
                        android:id="@+id/shopSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:autoSizeTextType="uniform"
                        android:drawableRight="@drawable/vbucks_white_outline"
                        android:text="Item Shop"
                        android:maxLines="1">
                    </Button>
                    <Button
                        android:id="@+id/promoSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:drawableRight="@drawable/twitch_outline"
                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp"
                        android:autoSizeTextType="uniform"
                        android:text="Promo Skins"
                        android:maxLines="1">
                    </Button>
                    <Button
                        android:id="@+id/holidaySkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:drawableRight="@drawable/ic_date_50dp"
                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:text="seasonal "
                        android:maxLines="1">
                    </Button>

                </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:id="@+id/seasonGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorPrimaryDarkAlpha">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/s1Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#1">

                        </Button>

                        <Button
                            android:id="@+id/s2Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#2">

                        </Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/s3Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#3">

                        </Button>

                        <Button
                            android:id="@+id/s4Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#4">

                        </Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/s5Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#5">

                        </Button>

                        <Button
                            android:id="@+id/s6Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#6">

                        </Button>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/s7Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#7">

                        </Button>

                        <Button
                            android:id="@+id/s8Skins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:padding="15dp"
                            android:layout_weight="1"

                            android:background="@color/greyishBlue"
                            android:fontFamily="@font/luckiestguy"
                            android:textColor="@color/colorWhite"
                            android:textSize="50sp"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:text="#8">

                        </Button>

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>


                <LinearLayout
                    android:id="@+id/rarityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@color/colorPrimaryDarkAlpha"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/uncommonSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"

                        android:background="@color/uncommonColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:text="Uncommon">

                    </Button>

                    <Button
                        android:id="@+id/rareSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"

                        android:background="@color/rareColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:text="Rare">

                    </Button>

                    <Button
                        android:id="@+id/epicSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"

                        android:background="@color/epicColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:textColor="@color/colorWhite"
                        android:maxLines="1"
                        android:text="epic">

                    </Button>

                    <Button
                        android:id="@+id/legendarySkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/legendaryColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="25sp"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:textColor="@color/colorWhite"
                        android:text="legendary">

                    </Button>



                </LinearLayout>


            </ViewFlipper>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/SELECTSCREEN_UNIT_ID">
    </com.google.android.gms.ads.AdView>

    </RelativeLayout>




