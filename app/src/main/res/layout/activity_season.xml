<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/background_original_cut"
        >

        <include layout="@layout/app_toolbar"></include>


        <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDarkAlpha"
            android:weightSum="4"
            >

            <Button
                android:id="@+id/battlePassButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:padding="15dp"
                android:layout_weight="1"

                android:background="@color/greyishBlue"
                android:drawableRight="@drawable/battlestar_white_50dp"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:text="Battle Pass  ">
            </Button>

            <Button
                android:id="@+id/shopSkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:padding="15dp"
                android:layout_weight="1"

                android:background="@color/greyishBlue"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:drawableRight="@drawable/vbucks_white_outline"
                android:text="Item Shop  ">
            </Button>
            <Button
                android:id="@+id/promoSkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:padding="15dp"
                android:layout_weight="1"

                android:drawableRight="@drawable/twitch_outline"
                android:background="@color/greyishBlue"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:text="Promo Skins  ">
            </Button>
            <Button
                android:id="@+id/holidaySkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="25dp"
                android:padding="15dp"
                android:layout_weight="1"

                android:drawableRight="@drawable/ic_date_50dp"
                android:background="@color/greyishBlue"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:text="seasonal Skins  ">
            </Button>

        </LinearLayout>


            <LinearLayout
                android:id="@+id/seasonGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@color/colorPrimaryDarkAlpha">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/s1Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#1">

                    </Button>

                    <Button
                        android:id="@+id/s2Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#2">

                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/s3Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#3">

                    </Button>

                    <Button
                        android:id="@+id/s4Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#4">

                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/s5Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#5">

                    </Button>

                    <Button
                        android:id="@+id/s6Skins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_weight="1"

                        android:background="@color/greyishBlue"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="75sp"
                        android:text="#6">

                    </Button>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/rarityLayout"
                    android:layout_alignLeft="@+id/rarityLayout"
                    android:background="@color/colorPrimaryDarkAlpha">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@color/greyishBlue"

                        android:text="Rarity"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:textSize="25dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rarityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/colorPrimaryDarkAlpha">

                    <Button
                        android:id="@+id/uncommonSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"

                        android:background="@color/uncommonColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="40dp"
                        android:textColor="@color/colorWhite"
                        android:text="Uncommon">

                    </Button>

                    <Button
                        android:id="@+id/rareSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"

                        android:background="@color/rareColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="40dp"
                        android:textColor="@color/colorWhite"
                        android:text="Rare">

                    </Button>

                    <Button
                        android:id="@+id/epicSkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"

                        android:background="@color/epicColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="40dp"
                        android:textColor="@color/colorWhite"
                        android:text="epic">

                    </Button>

                    <Button
                        android:id="@+id/legendarySkins"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"

                        android:background="@color/legendaryColor"
                        android:fontFamily="@font/luckiestguy"
                        android:textSize="40dp"
                        android:textColor="@color/colorWhite"
                        android:text="legendary">

                    </Button>



                </LinearLayout>


            </RelativeLayout>




        </ViewFlipper>

    </RelativeLayout>




