<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawermenu" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/app_toolbar"></include>


            <GridLayout
                android:id="@+id/homeButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDarkAlpha"



                >

                <Button
                    android:id="@+id/skinButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_columnSpan="1"
                    android:layout_marginLeft="10dp"


                    android:background="@color/greyishBlue"
                    android:drawableLeft="@drawable/skin_icon_small"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:text="Skins"
                    android:textColor="@color/colorWhite"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/statsButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"

                    android:drawableLeft="@drawable/ic_stats_50dp"
                    android:background="@color/greyishBlue"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:text="Stats"
                    android:textColor="@color/colorWhite"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/weaponsButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    android:drawableLeft="@drawable/ic_scar_50dp"
                    android:background="@color/greyishBlue"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:text="Weapons"
                    android:textColor="@color/colorWhite"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"/>

                <Button
                android:id="@+id/leaderboardButton"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                android:background="@color/greyishBlue"
                android:drawableLeft="@drawable/ic_leaderboard_50dp"
                android:fontFamily="@font/luckiestguy"
                android:gravity="center"
                android:text="leaderboard"
                android:textColor="@color/colorWhite"
                android:autoSizeTextType="uniform"
                android:maxLines="1"/>

                <Button
                    android:id="@+id/challengesButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    android:background="@color/greyishBlue"
                    android:drawableLeft="@drawable/battlestar_white_50dp"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:text="Challenges"
                    android:textColor="@color/colorWhite"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"/>

                <Button
                    android:id="@+id/newsButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    android:background="@color/greyishBlue"
                    android:drawableLeft="@drawable/ic_news_50dp"
                    android:fontFamily="@font/luckiestguy"
                    android:gravity="center"
                    android:text="News"
                    android:textColor="@color/colorWhite"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"/>


            </GridLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimaryDarkAlpha"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"

                        android:background="@color/greyishBlue"
                        android:textSize="20dp"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:text="Item Shop" />

                    <TextView
                        android:id="@+id/shopTimerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="4dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/luckiestguy"
                        android:textColor="@color/colorWhite"
                        android:text="00:00:00"/>


                </LinearLayout>

                <com.example.fraser.fndb.ExpandableHeightGridView
                    android:id="@+id/itemShopGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:numColumns="3"
                    android:gravity="center"
                    >

                </com.example.fraser.fndb.ExpandableHeightGridView>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>




</android.support.v4.widget.DrawerLayout>