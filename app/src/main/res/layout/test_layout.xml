<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/rarityLayout"
            android:layout_alignLeft="@+id/rarityLayout"
            android:background="@color/colorPrimaryDarkAlpha">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@color/greyishBlue"

                android:text="Rarity"
                android:fontFamily="@font/luckiestguy"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rarityLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="@color/colorPrimaryDarkAlpha">

            <Button
                android:id="@+id/uncommonSkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"

                android:background="@color/uncommonColor"
                android:fontFamily="@font/luckiestguy"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="Uncommon">

            </Button>

            <Button
                android:id="@+id/rareSkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"

                android:background="@color/rareColor"
                android:fontFamily="@font/luckiestguy"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="Rare">

            </Button>

            <Button
                android:id="@+id/epiSkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="10dp"

                android:background="@color/epicColor"
                android:fontFamily="@font/luckiestguy"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="epic">

            </Button>

            <Button
                android:id="@+id/legendarySkins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"

                android:background="@color/legendaryColor"
                android:fontFamily="@font/luckiestguy"
                android:textSize="30dp"
                android:textColor="@color/colorWhite"
                android:text="legendary">

            </Button>



        </LinearLayout>


    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/s1Skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@color/colorOffRed"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="Season 1">

        </Button>

        <Button
            android:id="@+id/s2Skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"

            android:background="@color/uncommonColor"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"

            android:text="Season 2">

        </Button>
        <Button
            android:id="@+id/s3Skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"

            android:background="@color/rareColor"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="Season 3">

        </Button>
        <Button
            android:id="@+id/s4Skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"

            android:background="@color/epicColor"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="Season 4">

        </Button>
        <Button
            android:id="@+id/s5Skins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"

            android:background="@color/legendaryColor"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="Season 5">

        </Button>
    </LinearLayout>

</LinearLayout>