<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDarkAlpha"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/challengeText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"


            android:textColor="@color/lightGrey"
            android:textStyle="bold"
            android:textSize="20dp"
            android:maxLines="2"
            android:autoSizeTextType="uniform"
            android:text="Deal Damage to Opponents" />

        <TextView
            android:id="@+id/challengeAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="0/5"/>


    </LinearLayout>

   <LinearLayout
       android:layout_width="100dp"
       android:layout_height="match_parent"
       android:layout_marginLeft="60dp"
       android:layout_gravity="right"
       android:orientation="horizontal"
       android:gravity="right"
       >

       <ImageView
           android:id="@+id/battleStarIcon"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="center"
           android:src="@drawable/battlestar_white_50dp"/>

       <TextView
           android:id="@+id/rewardText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"

           android:layout_marginTop="22.5dp"
           android:textStyle="bold"
            android:textColor="@color/gold"
           android:text="10"
           android:textSize="25dp"


           />

   </LinearLayout>

</LinearLayout>