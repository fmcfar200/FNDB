<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemRootLayout"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@color/legendaryColor"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/sItemImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_vbucks_foreground"

            />
        <TextView
            android:id="@+id/sItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:maxLines="2"
            android:paddingBottom="10dp"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="HEllO WORLD"
            android:textSize="25sp"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:background="@color/blackA"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/costLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:weightSum="3">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_vbucks_foreground"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/costText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/luckiestguy"
            android:textColor="@color/colorWhite"
            android:text="1000"
            android:textSize="25dp"
            android:autoSizeTextType="uniform"
            android:layout_weight="2"
            />


    </LinearLayout>


</LinearLayout>
